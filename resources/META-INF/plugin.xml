<idea-plugin>
    <id>com.nerdscorner.mvp</id>
    <name>MVP Creator plugin</name>
    <version>1.1</version>
    <vendor email="diego@marcher.com.uy" url="http://www.demi.com.uy">Nerd's Corner</vendor>

    <description><![CDATA[
      Small plugin to build MVP skeletons.<br>
      This plugin if highly tied to this <em>MVP library</em>, check it out: <br>
      https://github.com/marcherdiego/android_mvp
    ]]></description>

    <change-notes><![CDATA[
      Stable release
    ]]>
    </change-notes>

    <idea-version since-build="145.0"/>
    <depends>com.intellij.modules.lang</depends>
    <depends>com.intellij.modules.androidstudio</depends>

    <extensions defaultExtensionNs="com.intellij">
    </extensions>

    <actions>
        <action id="Create Btn" class="com.nerdscorner.mvp.CreateMvp" text="Create MVP skeleton">
            <add-to-group group-id="ToolsMenu" anchor="first"/>
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl M" second-keystroke="shift ctrl M"/>
        </action>
    </actions>

</idea-plugin>